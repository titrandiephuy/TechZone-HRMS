@model TechZone_HRMS.Domain.Models.Account.Login
@{
    ViewData["Title"] = "Login";
 }

<form role="form" method="post" asp-controller="Account" asp-action="Login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label>Email Address</label>
        <input asp-for="Email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="email-addon">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col">
                <label>Password</label>
            </div>
        </div>
        <input asp-for="Password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="password-addon">
        <span asp-validation-for="Password" class="text-danger"></span>
        <div class="form-check form-switch">
            <input class="form-check-input" asp-for="RememberMe" id="rememberMe" checked="">
            <label class="form-check-label" for="rememberMe">Remember me</label>
        </div>
    </div>
    <div class="form-group text-center">
        <button class="btn btn-primary account-btn" type="submit">Login</button>
    </div>
    <div class="account-footer">
        <p>Don't have an account yet? <a asp-controller="Account" asp-action="Register">Register</a></p>
    </div>
</form>